<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DemoMAUI.LoginPage"
             Title="Mis Asistencias">
    <VerticalStackLayout Padding="50" Spacing="20">
        <Image 
            Source="loginpage_image.png"
            HeightRequest="200"
            />
        <VerticalStackLayout>
            <Label Text="Usuario" />
            <Entry />
        </VerticalStackLayout>
        <Entry Placeholder="Contraseña" IsPassword="True" />
        <Button
            Text="🧑‍💻 Iniciar sesión" />
        <Button 
            Background="Transparent"
            TextColor="Blue"
            Text="¿Olvidaste la contraseña?" />
        <Button 
            Background="Transparent"
            TextColor="Blue"
            Text="Crear una nueva cuenta" />
        <StackLayout Orientation="Horizontal">
            <Button Text="Uno" HorizontalOptions="FillAndExpand" />
            <Button Text="Dos" HorizontalOptions="FillAndExpand" />
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>